<div class="grid-r">
  <div class="medium-3-4">
    <div class="box">
      <form accept-charset="UTF-8" action="/pools" class="new_pool" enctype="multipart/form-data" id="new_pool" method="post">
        <div class="pool-step">
          <div class="steps">
            <div class="step">
              1. <span class="default-hide small-show">Pool informatie</span>
            </div>
            <div class="step active">
              2. <span class="default-hide small-show">Bevestigen</span>
            </div>
            <div class="step">
              3. <span class="default-hide small-show">Vrienden uitnodigen</span>
            </div>
          </div>
        </div>
        <div class="content-header">
          <h1>1. Pool informatie</h1>
        </div>
        <div class="grid-r">
          <div class="small-1-3">
            <div class="avatar">
              <img alt="Missing" id="uploadPreview" src="images/missing-small.png" />
              <div class="btn green fileupload">
                <span>Bewerk afbeelding</span>
                <input class="upload" id="uploadImage" name="pool[avatar]" onchange="PreviewImage();" type="file" />
              </div>
              <script type="text/javascript">

                function PreviewImage() {
                    var oFReader = new FileReader();
                    oFReader.readAsDataURL(document.getElementById("uploadImage").files[0]);

                    oFReader.onload = function (oFREvent) {
                        document.getElementById("uploadPreview").src = oFREvent.target.result;
                    };
                }
              </script>
            </div>
          </div>
          <div class="small-2-3">
            <div class="pool_new_form">
              <div class="form-field">
                <label for="poolnaam">Pool naam</label>
                <h3>The Next Web Leeuwarden</h3>
              </div>
              <div class="form-field inline">
                <label for="prive">Privacy</label>
                <h3>Priv&eacute; pool</h3>
              </div>
              <div class="form-field" id="private_pool_enabled">
                <div class="form-field">
                  <label for="poolnaam">Wachtwoord</label>
                  <h3>
                    <span class='password'>*****</span>
                    <span class='hide password'>12345</span>
                  </h3>
                  <p>
                    <a class="togglepassword" href="#">Toon wachtwoord</a>
                    <a class="togglepassword hide" href="#">Verberg wachtwoord</a>
                  </p>
                </div>
              </div>
              <div class="form-field">
                <button class="green" type="submit">Volgende stap &nbsp; <i class="fa fa-chevron-right"></i></button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="default-0 medium-1-4">
    <div class="box aside">
      <div class="side-header">
        <h2>Mijn pools</h2>
      </div>
      <div class="pool-list-small">
        <ul>
          <li>
            <a href="#" class="grey">The Next Web Leeuwarden</a>
            <a href="#" class="grey">The Next Web Leeuwarden</a>
            <a href="#" class="grey">The Next Web Leeuwarden</a>
          </li>
        </ul>
        <a href="#" class="btn green">Pool aanmaken</a>
      </div>
    </div>
  </div>
</div>
<script>poolNewPassword();</script>