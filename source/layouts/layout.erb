<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700' rel='stylesheet' type='text/css'>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "mijnwkpool Static" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <!-- <div id="flash" class="flash error">
      <div class="flash-inner">
        <div class="view-row">
          <div class="flash-text">Je hebt geen toestemming om je bij deze pool aan te sluiten</div>
          <div id="flashClose" class="flash-close">
            <i class="fa fa-times flash-close-btn"></i>
          </div>
        </div>
      </div>
      <script>flashMessage();</script>
    </div> -->
    <div id="mobile-nav" class="mobile-nav closed">
      <a id="nav-close-btn" class="nav-close-btn" href="#">
        <i class="fa fa-times"></i>
      </a>
      <ul>
        <li><a href="#">Dashboard</a></li>
        <li><a href="#">Pool aansluiten</a></li>
        <li><a href="#">Pool aanmaken</a></li>
      </ul>
    </div>
    <div class="wrapper">
      <div class="header-wrapper">
        <div class="header-inner">
          <div class="logo">
            <a href="#">
              <div class="default-hide small-show">
                <img src="<%= image_path('logo-big.svg') %>" alt="mijnwkpool" height='60'>
              </div>
              <div class="small-hide">
                <img src="<%= image_path('logo-small.svg') %>" alt="mijnwkpool" height='50'>
              </div>
            </a>
          </div>
          <div class="nav">

            <div class="default-hide medium-show">
              <ul>
                <li>
                  <a class="grey" href="#">Dashboard</a>
                </li>
                <li>
                  <a class="grey" href="#">Pool aansluiten</a>
                </li>
                <li>
                  <a class="grey" href="#">Pool aanmaken</a>
                </li>
              </ul>
            </div>

            <div class="medium-hide">
              <a class="nav-btn" id="nav-open-btn" href="#">
                <i class="fa fa-bars"></i> MENU
              </a>
            </div>

          </div>
          <div class="user">
            <a href="#" class="grey">
              <div class="user-name">
                Sander Tuin
              </div>
              <div class="user-icon">
                <i class="fa fa-user"></i>
              </div>
            </a>
          </div>
        </div>
      </div>
      <div class="content-wrapper">
        <%= yield %>
      </div>
    </div>
  </body>
</html>